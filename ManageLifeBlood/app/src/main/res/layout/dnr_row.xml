<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/leftMargin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtDnrName"
        android:layout_width="@dimen/Lwidth"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mainTextMargin"
        android:layout_marginLeft="@dimen/leftMargin"
        android:text="@string/nousersfound"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtDnrLoc"
        android:layout_width="@dimen/Mwidth"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mainTextMargin"
        android:layout_marginLeft="@dimen/leftMargin"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtDnrScore"
        android:layout_width="@dimen/Mwidth"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mainTextMargin"
        android:layout_marginLeft="@dimen/leftMargin"
        android:textColor="@android:color/black" />




</LinearLayout>